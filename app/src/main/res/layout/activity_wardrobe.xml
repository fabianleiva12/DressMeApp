<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.project.dressmeapp.dressmeapp.WardrobeActivity">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Closet"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="131dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageButton
        android:id="@+id/imageButton5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="47dp"
        android:layout_marginTop="50dp"
        android:onClick="option1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <ImageButton
        android:id="@+id/imageButton6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="47dp"
        android:layout_marginTop="30dp"
        android:onClick="option2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageButton5"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <ImageButton
        android:id="@+id/imageButton7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="47dp"
        android:layout_marginTop="33dp"
        android:onClick="option3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageButton6"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <ImageButton
        android:id="@+id/imageButton8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="47dp"
        android:layout_marginTop="31dp"
        android:onClick="option4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageButton7"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <ImageView
        android:id="@+id/Head"
        android:layout_width="89dp"
        android:layout_height="70dp"
        app:srcCompat="@mipmap/ic_launcher"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="48dp"
        app:layout_constraintLeft_toRightOf="@+id/imageButton5"
        android:layout_marginLeft="38dp" />

    <ImageView
        android:id="@+id/Torso"
        android:layout_width="96dp"
        android:layout_height="89dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_marginTop="9dp"
        app:layout_constraintTop_toBottomOf="@+id/Head"
        app:layout_constraintLeft_toRightOf="@+id/imageButton6"
        android:layout_marginLeft="38dp" />

    <ImageView
        android:id="@+id/Leg"
        android:layout_width="90dp"
        android:layout_height="87dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@+id/Torso"
        app:layout_constraintLeft_toRightOf="@+id/imageButton7"
        android:layout_marginLeft="38dp" />

    <ImageView
        android:id="@+id/Feet"
        android:layout_width="90dp"
        android:layout_height="76dp"
        android:layout_marginLeft="38dp"
        android:layout_marginTop="18dp"
        app:layout_constraintLeft_toRightOf="@+id/imageButton8"
        app:layout_constraintTop_toBottomOf="@+id/Leg"
        app:srcCompat="@mipmap/ic_launcher" />
</android.support.constraint.ConstraintLayout>
