<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profilelayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.project.dressmeapp.dressmeapp.ProfileActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="304dp"
        android:layout_height="20dp"
        android:layout_marginTop="7dp"
        android:text="Información de Perfil"
        android:gravity="center_horizontal"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/profilepicture"
        android:layout_marginStart="16dp"
        android:layout_marginTop="35dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="18dp"
        android:layout_width="117dp"
        android:layout_height="106dp"
        android:onClick="onImageGalleryClicked"
        app:srcCompat="@mipmap/ic_launcher"/>



    <Button
        android:id="@+id/button3"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="116dp"
        android:layout_height="33dp"
        android:layout_marginStart="16dp"
        android:fontFamily="sans-serif"
        android:onClick="onImageGalleryClicked"
        android:text="editar"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profilepicture" />

    <TextView
        android:id="@+id/tv1"
        android:layout_width="166dp"
        android:layout_height="37dp"
        android:layout_marginTop="43dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="137dp" />

    <TextView
        android:id="@+id/tv2"
        android:layout_width="168dp"
        android:layout_height="50dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="15dp"
        android:text="Descripción breve de los gustos del usuario."
        app:layout_constraintTop_toBottomOf="@+id/tv1"
        app:layout_constraintLeft_toRightOf="@+id/profilepicture" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="304dp"
        android:layout_height="24dp"
        android:text="Mi Ropa"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@+id/button3"
        tools:layout_editor_absoluteX="0dp" />

    <LinearLayout
        android:layout_width="304dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/textView2">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/HeadIcon"
                android:layout_width="53dp"
                android:layout_height="46dp"
                android:layout_marginStart="16dp"
                android:onClick="TakeHeadPhoto"
                app:srcCompat="@mipmap/ic_launcher" />

            <ImageView
                android:id="@+id/head_one"
                android:layout_width="52dp"
                android:layout_height="46dp"
                app:srcCompat="@mipmap/ic_launcher" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/TorsoIcon"
                android:layout_width="53dp"
                android:layout_height="46dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="16dp"
                android:onClick="TakeTorsoPhoto"
                app:srcCompat="@mipmap/ic_launcher" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/FeetIcon"
                android:layout_width="53dp"
                android:layout_height="48dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="16dp"
                android:onClick="TakeFeetPhoto"
                app:srcCompat="@mipmap/ic_launcher" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/LegsIcon"
                android:layout_width="53dp"
                android:layout_height="49dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="16dp"
                android:onClick="TakeLegsPhoto"
                app:srcCompat="@mipmap/ic_launcher" />
        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
