<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profilelayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.project.dressmeapp.dressmeapp.ProfileActivity">

    <TextView
        android:id="@+id/tv1"
        android:layout_width="166dp"
        android:layout_height="37dp"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="43dp"
        app:layout_constraintLeft_toRightOf="@+id/profilepicture"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/profilepicture"
        android:layout_width="107dp"
        android:layout_height="87dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="35dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/tv2"
        android:layout_width="168dp"
        android:layout_height="40dp"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="24dp"
        android:text="Descripción breve de los gustos del usuario."
        app:layout_constraintLeft_toRightOf="@+id/profilepicture"
        app:layout_constraintTop_toBottomOf="@+id/tv1" />

    <ImageButton
        android:id="@+id/TorsoIcon"
        android:layout_width="52dp"
        android:layout_height="50dp"
        android:onClick="TakeTorsoPhoto"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/HeadIcon"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageButton
        android:id="@+id/LegsIcon"
        android:layout_width="51dp"
        android:layout_height="49dp"
        android:onClick="TakeLegsPhoto"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/TorsoIcon"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageButton
        android:id="@+id/HeadIcon"
        android:layout_width="53dp"
        android:layout_height="46dp"
        android:onClick="TakeHeadPhoto"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <ImageButton
        android:id="@+id/FeetIcon"
        android:layout_width="51dp"
        android:layout_height="48dp"
        android:onClick="TakeFeetPhoto"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@+id/LegsIcon"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="135dp"
        android:layout_height="20dp"
        android:text="Información de Perfil"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="93dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="57dp"
        android:layout_height="24dp"
        android:text="Mi Ropa"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/tv2"
        android:layout_marginLeft="132dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageView
        android:id="@+id/head_one"
        android:layout_width="52dp"
        android:layout_height="46dp"
        app:srcCompat="@mipmap/ic_launcher"
        app:layout_constraintLeft_toRightOf="@+id/HeadIcon"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/button3"
        android:layout_width="108dp"
        android:layout_height="36dp"
        android:onClick="onImageGalleryClicked"
        android:text="Cambiar"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/profilepicture" />

</android.support.constraint.ConstraintLayout>
